<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jju.example.com.xgg.fragment.OrderFragment">
    <!--状态栏占位-->
    <LinearLayout
        android:id="@+id/order_ll_status_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <jju.example.com.xgg.view.MyStatusBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--标题栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单"
            android:textColor="@color/logoOrange"
            android:textSize="18sp"
            android:layout_gravity="center"/>
       <!-- <View
            android:layout_width="52dp"
            android:layout_height="2dp"
            android:background="@color/logoOrange"
            android:layout_gravity="center"/>-->


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center">

        <com.gxz.PagerSlidingTabStrip
            android:id="@+id/order_psts_title_tabs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/txtBlack"
            android:textSize="15sp"
            app:pstsDividerColor="@android:color/transparent"
            app:pstsDividerPaddingTopBottom="0dp"
            app:pstsIndicatorColor="@color/logoOrange"
            app:pstsIndicatorHeight="2dp"
            app:pstsScaleZoomMax="0.0"
            app:pstsShouldExpand="false"
            app:pstsSmoothScrollWhenClickTab="false"
            app:pstsTabPaddingLeftRight="30dp"
            app:pstsTextAllCaps="false"
            app:pstsTextSelectedColor="@color/logoOrange"
            app:pstsUnderlineHeight="0dp"
            android:layout_gravity="center" />


    </LinearLayout>
    <jju.example.com.xgg.view.NoScrollViewPager
        android:id="@+id/order_nsvp_viewpager_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    

</LinearLayout>
