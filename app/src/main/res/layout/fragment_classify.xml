<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jju.example.com.xgg.fragment.ClassifyFragment"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--搜索框-->
        <jju.example.com.xgg.view.HomeSearbar
            android:id="@+id/hs_searchbar_classify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center">

            <com.gxz.PagerSlidingTabStrip
                android:id="@+id/title_tabs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/txtBlack"
                android:textSize="15sp"
                app:pstsDividerColor="@android:color/transparent"
                app:pstsDividerPaddingTopBottom="0dp"
                app:pstsIndicatorColor="@color/logoOrange"
                app:pstsIndicatorHeight="2dp"
                app:pstsScaleZoomMax="0.0"
                app:pstsShouldExpand="false"
                app:pstsSmoothScrollWhenClickTab="false"
                app:pstsTabPaddingLeftRight="30dp"
                app:pstsTextAllCaps="false"
                app:pstsTextSelectedColor="@color/logoOrange"
                app:pstsUnderlineHeight="0dp"
                android:layout_gravity="center" />


        </LinearLayout>
        <jju.example.com.xgg.view.NoScrollViewPager
            android:id="@+id/vp_viewpager_classify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        
    </LinearLayout>

</RelativeLayout>
