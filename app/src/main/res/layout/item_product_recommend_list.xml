<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:star="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">
    <!--店铺信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iprl_iv_head"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:src="@mipmap/img_shop"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--店名-->
            <TextView
                android:id="@+id/iprl_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="果匠"
                android:textSize="16sp"
                android:textColor="@color/product_list_txt_title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:paddingLeft="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <!--店铺评星-->
                    <jju.example.com.xgg.view.StarRatingView
                        android:id="@+id/iprl_srv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="00dp"
                        android:layout_marginBottom="0dp"
                        android:paddingLeft="0dp"
                        star:ratable="false"
                        star:star_padding="0dp"
                        star:stat_half="@mipmap/star_half_small"
                        star:stat_off="@mipmap/comment_ic_star_hollow_small"
                        star:stat_on="@mipmap/comment_ic_star_solid_small"/>
                    <!--店铺评分-->
                    <TextView
                        android:id="@+id/iprl_tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:textSize="10sp"
                        android:textColor="@color/product_list_txt_level"
                        android:text="4.8"/>
                    <!--月销量-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/product_list_txt_content"
                        android:textSize="10sp"
                        android:text="月售605"/>
                </LinearLayout>

                <!--距离-->
                <TextView
                    android:id="@+id/iprl_tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/product_list_txt_content"
                    android:textSize="10sp"
                    android:text="2.1km"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp">

                <!--起送价-->
                <TextView
                    android:id="@+id/iprl_tv_starting_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="11dp"
                    android:textColor="@color/product_list_txt_content"
                    android:textSize="12sp"
                    android:text="起送 ￥30"/>
                <!--起送价-->
                <TextView
                    android:id="@+id/iprl_tv_delive_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/product_list_txt_content"
                    android:textSize="12sp"
                    android:text="配送 ￥3"/>>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
    <!--商品信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/iprl_ll_product1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iprl_iv_product1_head"
                android:layout_width="110dp"
                android:layout_height="82dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_product1"/>
            <TextView
                android:id="@+id/iprl_tv_product1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/product_list_txt_content"
                android:textSize="10sp"
                android:text="新鲜香蕉"/>
            <TextView
                android:id="@+id/iprl_tv_product1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textColor="@color/material_red"
                android:textSize="10sp"
                android:text="￥7.9"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/iprl_ll_product2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iprl_iv_product2_head"
                android:layout_width="110dp"
                android:layout_height="82dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_product2"/>
            <TextView
                android:id="@+id/iprl_tv_product2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/product_list_txt_content"
                android:textSize="10sp"
                android:text="新鲜香蕉"/>
            <TextView
                android:id="@+id/iprl_tv_product2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textColor="@color/material_red"
                android:textSize="10sp"
                android:text="￥7.9"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/iprl_ll_product3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iprl_iv_product3_head"
                android:layout_width="110dp"
                android:layout_height="82dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_product3"/>
            <TextView
                android:id="@+id/iprl_tv_product3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/product_list_txt_content"
                android:textSize="10sp"
                android:text="新鲜香蕉"/>
            <TextView
                android:id="@+id/iprl_tv_product3_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textColor="@color/material_red"
                android:textSize="10sp"
                android:text="￥7.9"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
