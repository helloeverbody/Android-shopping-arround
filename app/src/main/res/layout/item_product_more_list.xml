<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_shop_product">

        <!--商品图片-->
        <ImageView
            android:id="@+id/ipml_iv_prod_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="0.1dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/item_fruit"/>
    </LinearLayout>
    <!--商品描述-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ipml_tv_prod_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/product_list_txt_title"
            android:textSize="16sp"
            android:text="冰糖心苹果"/>
        <TextView
            android:id="@+id/ipml_tv_prod_month_count"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/product_list_txt_content"
            android:textSize="12sp"
            android:text="月售6"/>

        <TextView
            android:id="@+id/ipml_tv_prod_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥10.8"
            android:textColor="@color/material_red" />

    </LinearLayout>

</LinearLayout>
